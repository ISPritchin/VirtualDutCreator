% Normal text
\setbeamercolor{normal text}{fg=black}

% First page
\setbeamercolor*{title}{fg=black,bg=black}
\setbeamercolor*{author}{fg=black,bg=black}
\setbeamercolor*{date}{fg=black,bg=black}

% Generic frames header and footer
\setbeamercolor{titlelike}{fg=black}
\setbeamercolor*{frametitle}{fg=white}
\setbeamercolor*{framesubtitle}{fg=white}
\setbeamercolor*{title in head/foot}{fg=black}
\setbeamercolor*{author in head/foot}{fg=black}

%Blocks
\setbeamercolor{block title}{bg=MainColor,fg=white}
\setbeamercolor{block title alerted}{bg=UmUPink,fg=white}
\setbeamercolor{block title example}{bg=UmUGreen,fg=white}
\setbeamercolor{block body}{bg=MainColor!15,fg=black}
\setbeamercolor{block body alerted}{bg=UmUPink!20,fg=black}
\setbeamercolor{block body example}{bg=UmUGreen!20,fg=black}

% Lists
\setbeamercolor*{item}{fg=MainColor}

% Quotation and quote
\setbeamercolor*{quotation}{fg=black,bg=MainColor!10}

% Verse
\setbeamercolor*{verse}{fg=black,bg=MainColor!10}

% Abstract
\setbeamercolor*{abstract}{fg=black,bg=MainColor!10}

% Table of contents 
\setbeamercolor*{structure}{fg=black}

% Bibliography
\setbeamercolor*{bibliography entry title}{fg=black}
\setbeamercolor*{bibliography entry author}{fg=black}
\setbeamercolor*{bibliography entry location}{fg=black!50}
\setbeamercolor*{bibliography entry note}{fg=black!50}


